
@using SportsStore.Domain.Entities
@model Order
<h2>Zakończ zamówienie</h2>
<p>Proszę wprowadź dane do wysyłki.</p>
<div asp-validation-summary="All" class="text-danger"></div>
@using (Html.BeginForm("Checkout", "Order", FormMethod.Post))
{
    <h3>Dane dostawy</h3>
    <div class="form-group">
        <label>Imię i nazwisko:</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>Adres</h3>
    <div class="form-group">
        <label>Linia 1:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Linia 2:</label><input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Linia 3:</label><input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>Miasto:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kod pocztowy:</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kraj:</label><input asp-for="Country" class="form-control" />
    </div>
    <h3>Dodatki</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap" /> Zapakuj na prezent
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Złóż zamówienie" />
    </div>
}

